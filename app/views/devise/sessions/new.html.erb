<div class="container">
  <div class="columns is-centered">
    <div class="column is-half">

    <br>
    <br>
    <br>
    <br>
      <h1 class="title is-2">
        Log into your account to connect with your friends!
      </h1>
    </div>
    <div class="column is-one-fifth"></div>
    <div class="column">

      <div class="card">
        <div class="card-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "input is-medium", autocomplete: "email", placeholder: "Email" %>
            </div>

            <div class="field">
              <%= f.password_field :password, class: "input is-medium", autocomplete: "current-password", placeholder: "Password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <div class="control">
                  <%= f.label :remember_me do %>
                    <%= f.check_box :remember_me %>
                    Remember me
                  <% end %>
                </div>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Log in", class: "button is-info is-medium" %>
            </div>
          <% end %>
            <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
  
</div>
  
