<div class="columns is-centered">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="block">
        <div class="card">
          <div class="card-header">
            <div class="columns">
              <%= link_to post.user.name, user_path(post.user.id) %>
            </div>
          </div>
          <div class="card-content">
            <p>
              <%= post.content %>
            </p>  
          </div>
          <div class="card-footer">
            <%= button_to "â™¡ #{ post.likes.count }", like_post_url(post), method: :put %>
          </div>
          <% unless post.comments.nil? %>
            <div class="card">
              <%= render 'posts/comments', post: post %>
            </div>
          <% end %>
          <div class="card-footer">
            <%= render 'comments/form', comment: post.comments.new %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

